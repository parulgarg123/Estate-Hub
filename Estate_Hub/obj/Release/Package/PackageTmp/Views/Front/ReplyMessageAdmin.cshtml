@model Proptiwise.Models.tbMessage
@using Proptiwise.Models
@{
    ViewBag.Title = "ReplyMessageAdmin";
    Layout = "~/Views/Shared/InnerMaster.cshtml";
}
<div class="container">
    <div class="row">
        <div class="Billing-form">
            <section class="dash_column property-back clearfix" style="background: #fff;">

                @using (Html.BeginForm("ReplyMessageAdmin", "Front", FormMethod.Post, new { @id = "reply", @class = "form-tag" }))
                {

                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <section class="UNIT-ADDRESS">
                            <h1 class="form_heading">Reply</h1>

                            <div class="input-group form-group custom">
                                <label class="mr-sm-2 label-f" for="inlineFormCustomSelect">Subject </label>
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", required = true, oninvalid = "setCustomValidity('Enter valid Subject')", oninput = "setCustomValidity('')" })
                                @Html.ValidationMessageFor(model => model.Subject)
                            </div>

                            <div class="form-group custom">
                                <label class="mr-sm-2 label-f" for="inlineFormCustomSelect">Message</label>
                                @Html.TextBoxFor(model => model.Message, new { @class = "form-control", required = true, oninvalid = "setCustomValidity('Enter any text')", oninput = "setCustomValidity('')" })
                                @Html.ValidationMessageFor(model => model.Message)
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" type="submit"> Reply</button>
                            </div>

                        </section>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
