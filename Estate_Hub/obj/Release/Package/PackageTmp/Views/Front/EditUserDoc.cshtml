@model Proptiwise.Models.UserDocument

@{
    ViewBag.Title = "EditUserDoc";
    Layout = "~/Views/Shared/InnerMaster.cshtml";
}

<h2>EditDoc</h2>
<div class="col-md-9">
     @using (Html.BeginForm()) { @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>UserDocument</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.UserDocumentId)

