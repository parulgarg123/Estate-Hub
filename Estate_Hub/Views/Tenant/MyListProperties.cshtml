                                                    string[] pimg =p.PropertyPhotos.Split(',');
                                                <img src="@getallpath.getpath/Folders/PropertyImages/@pimg[0]" alt="Property">
                                                }
                                                else
                                                {
                                                <img src="@getallpath.getpath/Folders/PropertyImages/No_image_available.png" alt="Property">
                                                }
                                               }
                                            </div>
