@model Proptiwise.Models.DocumentType
@{
    ViewBag.Title = "AddNewDocType";
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Add Document Type</h4>
</div>
     
            <div class="modal-body">
                @using (Html.BeginForm("AddNewDocType", "Front", FormMethod.Post, new { @id = "AddNewDocType", @name = "AddNewDocType" }))
                {
                    <div class="form-horizontal">
                      
                        @Html.ValidationSummary(true)
                        <div class="form-group clearfix">
                            <span class="col-md-2">
                                @Html.LabelFor(model => model.DocumentTypeName, new { @class = "control-label" })
                                </span>
                                <span class="col-md-10">
                                    @Html.TextBoxFor(model => model.DocumentTypeName, new { @class = "form-control", required = "true", oninvalid = "setCustomValidity('Enter Document Type')", oninput = "setCustomValidity('')" })
                                    @Html.ValidationMessageFor(model => model.DocumentTypeName)
                                </span>
</div>
                        <div class="form-group clearfix">
                            <span class="col-md-5">
                                <input type="submit" value="Add" class="btn btn-primary" /></span>
</div>
                    </div>
                }
            </div>
        
