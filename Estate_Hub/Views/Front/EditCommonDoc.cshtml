@model Proptiwise.Models.CommonDocument
@{
    Layout = null;
}

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h2>Edit Info</h2>
            </div>
            <div class="modal-body">
              <div class="form-horizontal">
                  @using (Html.BeginForm(FormMethod.Post))
                  { 
                  <div class="form-group">
                      @Html.LabelFor(model => model.DocComments, new { @class = "control-label col-md-2" })
                      <div class="col-md-10">

                          @Html.TextAreaFor(model => model.DocComments, new { @col="3"})
                          @Html.ValidationMessageFor(model => model.DocComments)
                      </div>
                  </div>
                  <div class="form-group">
                      <div class="col-md-offset-2 col-md-10">
                          <input type="submit" value="Update" class="btn btn-default" />
                      </div>
                  </div>
                  }
              </div>
            </div>
       